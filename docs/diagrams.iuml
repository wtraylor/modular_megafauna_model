  "Host Program" .right.> Fauna.World
@enduml

@startuml (id=population_classes)
  hide members
  hide methods
  namespace Fauna{
    interface PopulationInterface
    PopulationInterface <|-- CohortPopulation
    CohortPopulation     *-- "*" HerbivoreCohort
    class SimulationUnit
