  }
@enduml

@startuml (id=parameters_access)
  hide members
  hide methods
  namespace Fauna{
    CreateHerbivoreCohort     ..> Parameters
    CreateHerbivoreCohort     ..> Hft
    CohortPopulation          .up.> Hft
    abstract HerbivoreBase
